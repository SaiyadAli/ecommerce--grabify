<%- include('../partials/userHeader.ejs') %>
    <main>
        <!-- slider Area Start-->
        <section class="slider-area">
            <div class="slider-active">
                <!-- Single Slider -->
                <% products.filter(product => product.isListed).forEach(product => { %>
                <div class="single-slider slider-bg1 slider-height d-flex align-items-center">
                    <div class="container">
                        <div class="row">
                            <div class="col-xxl-5 col-xl-6 col-lg-7 col-md-8 col-sm-10">
                                <div class="hero-caption text-center">
                                    <span><%= product.categoryid.categoryName %></span>
                                    <h1 data-animation="bounceIn" data-delay="0.2s"><%= product.name %></h1>
                                    <p data-animation="fadeInUp" data-delay="0.4s"><%= product.description %></p>
                                    <a href="#" class="btn_1 hero-btn" data-animation="fadeInUp" data-delay="0.7s">Shop Now</a>
                                </div>
                            </div>
                        </div>
                    </div>          
                </div>
                <% }); %>
            </div>
        </section>
        <!-- slider Area End-->


        <!--category area start -->
        <section class="items-product1 pt-30">
            <div class="container">
            <div class="row">
                <div class="col-12">
                <div class="section-title text-center mb-30">
                    <h2>Categories</h2>
                </div>
                </div>
            </div>
            <div class="row">
                <% categories.filter(category => category.isListed).forEach(category => { %>
                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6">
                <div class="single-items mb-20">
                    <div class="items-img">
                    <img src="/uassets/img/gallery/items1.jpg" alt="">
                   
                    </div>
                    <div class="items-details">
                    <h4><a href="pro-details.html"><%= category.categoryName %></a></h4>
                    <p><a href="pro-details.html"><%=category.categoryDescription %></a></p>
                    <a href="pro-details.html" class="browse-btn">Shop Now</a>
                    </div>
                </div>
                </div>
                <% }); %>
            </div>
            </div>
        </section>
      <!--category area end -->
        
       
    <div class="latest-items section-padding fix">
        <!-- items Product  Start-->
        <div class="container">
            <!-- Section Title -->
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center mb-30">
                        <h2>Latest Trends</h2>
                    </div>
                </div>
            </div>
            <!-- Nav Card -->
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="nav-one" role="tabpanel" aria-labelledby="nav-one-tab">
                    <!-- Tab 1 -->  
                    <div class="latest-items-active">
                        <% variants.filter(variant => variant.isListed && variant.productId.isListed ).forEach(variant => { %>
                        <div class="properties pb-30">
                            <div class="properties-card">
                                <div class="properties-img">
                                    <a href="/user/product/<%= variant._id %>"><img src="<%= variant.images[0] || '/uassets/img/gallery/latest1.jpg' %>" alt=""></a>
                                    <div class="socal_icon">
                                        <a href="#"><i class="ti-shopping-cart"></i></a>
                                        <a href="#"><i class="ti-heart"></i></a>
                                        <a href="#"><i class="ti-zoom-in"></i></a>
                                    </div>
                                </div>
                                <div class="properties-caption properties-caption2">
                                    <h3><a href="/user/product/<%= variant._id %>"><%= variant.productId.name %> (<%= variant.color %>)</a></h3>
                                    <div class="properties-footer">
                                        <div class="price">
                                            <span>$<%= variant.price %> <span>$120.00</span></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
                <!-- Repeat similar structure for other tabs if needed -->
            </div>
        </div>
    </div>

    
</main>
    
<%- include('../partials/userFooter.ejs') %>