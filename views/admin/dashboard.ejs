<script>
  function filterSales() {
    const daterange = $('.daterange').val();
    const [startDate, endDate] = daterange.split(' - ');

    $.get('/admin/sales-report', { startDate, endDate }, function(data) {
      let reportHtml = `
        <p>Total Orders: ${data.totalOrders}</p>
        <p>Total Sales Amount: $${data.totalSalesAmount.toFixed(2)}</p>
        <p>Total Discount: $${data.totalDiscount.toFixed(2)}</p>
      `;

      if (data.orders && data.orders.length > 0) {
        reportHtml += `
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Order Number</th>
                <th>User Name</th>
                <th>Items</th>
                <th>Payment Type</th>
                <th>Total Cost</th>
                <th>Order Date</th>
                <th>Status</th>
                <th>Details</th>
              </tr>
            </thead>
            <tbody>
        `;

        data.orders.forEach(order => {
          reportHtml += `
            <tr>
              <td>#${order.orderNumber}</td>
              <td>${order.userId.username}</td>
              <td>${order.cartData.length} <small>item(s)</small></td>
              <td>${order.paymentType}</td>
              <td>â‚¹${order.grandTotalCost}</td>
              <td>${new Date(order.orderDate).toLocaleDateString()}</td>
              <td><span class="badge rounded-pill bg-success">Delivered</span></td>
              <td><a href="/admin/orders/${order._id}/status" class="btn btn-primary btn-sm">View Details</a></td>
            </tr>
          `;
        });

        reportHtml += `
            </tbody>
          </table>
        `;
      } else {
        reportHtml += `<p>No orders found for the selected date range.</p>`;
      }

      $('#salesReport').html(reportHtml);
    });
  }

  function downloadReport(format) {
    const daterange = $('.daterange').val();
    const [startDate, endDate] = daterange.split(' - ');

    const url = `/admin/download-report?format=${format}&startDate=${startDate}&endDate=${endDate}`;
    window.location.href = url;
  }

  // Trigger filterSales on date range change
  $('.daterange').on('apply.daterangepicker', function() {
    filterSales();
  });

  // Initial load
  $(document).ready(function() {
    filterSales();
  });
</script>


